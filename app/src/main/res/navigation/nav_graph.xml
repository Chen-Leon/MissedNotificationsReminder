<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/settingsFragment">


    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.app.missednotificationsreminder.ui.fragment.SettingsFragment"
        android:label="@string/settings_title"
        tools:layout="@layout/settings_view">
        <action
            android:id="@+id/action_settingsFragment_to_applicationsSelectionFragment"
            app:destination="@id/applicationsSelectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/applicationsSelectionFragment"
        android:name="com.app.missednotificationsreminder.ui.fragment.ApplicationsSelectionFragment"
        android:label="@string/applications_selection_title"
        tools:layout="@layout/applications_selection_view"/>
</navigation>